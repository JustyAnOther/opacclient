<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/ripple"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:minHeight="72dp">

    <ImageView
        android:id="@+id/ivMediaType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/type_book"/>

    <LinearLayout
        android:id="@+id/llData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:clickable="false"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tvTitleAndAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/title_and_author"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Harry Potter and the Philosopher's stone, J. K. Rowling"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">
            <Space
                android:id="@+id/centerHelper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tvStarDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="?android:attr/textColorPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="12/11/23"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="?android:attr/textColorHighlight"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="2/2/22"/>

        <ImageView
            android:id="@+id/ivStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ivDelete"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:contentDescription="@string/status"
            app:srcCompat="@drawable/status_light_green_check"
            tools:ignore="MissingPrefix"/>

        <ImageButton
            android:id="@+id/ivDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:background="@drawable/ripple_unmasked"
            android:contentDescription="@string/delete"
            app:srcCompat="@drawable/ic_delete_24dp"
            tools:src="@drawable/ic_delete_24dp"/>
    </LinearLayout>
</LinearLayout>
